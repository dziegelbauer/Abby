@page
@model AbbyWeb.Pages.Categories.DeleteModel

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primarypl-3">Delete Category</h2>
            <hr/>
        </div>
        <div asp-validation-summary="All"></div>
        <div class="mb-3">
            <label asp-for="Category.Name"></label>
            <input disabled type="text" asp-for="@Model.Category.Name" class="form-control"/>
        </div>
        <div class="mb-3">
            <label asp-for="Category.DisplayOrder"></label>
            <input disabled type="text" asp-for="@Model.Category.DisplayOrder" class="form-control"/>
        </div>
        <button type="submit" class="btn btn-danger" style="width: 150px;">Delete</button>
        <a asp-page="/Categories/Index" class="btn btn-secondary" style="width: 150px;">Back to List</a>
    </div>
</form>