@page
@model EditModel

<form method="post">
    <input hidden asp-for="FoodType.Id"/>
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primarypl-3">Edit Food Type</h2>
            <hr/>
        </div>
        <div asp-validation-summary="All"></div>
        <div class="mb-3">
            <label asp-for="FoodType.Name"></label>
            <input type="text" asp-for="@Model.FoodType.Name" class="form-control"/>
            <span asp-validation-for="FoodType.Name" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary" style="width: 150px;">Update</button>
        <a asp-page="/Admin/Categories/Index" class="btn btn-secondary" style="width: 150px;">Back to List</a>
    </div>
</form>

@section Scripts
{
    @{
        <partial name="Shared/_ValidationScriptsPartial"/>
    }
}